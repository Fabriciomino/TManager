<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER SUPERIOR MORADO -->
    <RelativeLayout
        android:id="@+id/headerPerfil"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#1A0026"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>


    <!-- CONTENEDOR DE BOTONES -->
    <LinearLayout
        android:id="@+id/layoutBotonesPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerPerfil"
        app:layout_constraintStart_toStartOf="parent">

        <!-- BOTÓN: MI INFORMACIÓN -->
        <RelativeLayout
            android:id="@+id/btnMiInformacion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/iconMiInformacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/userlogo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Información"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="60dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="30sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>


        <!-- BOTÓN: DETALLES DE EQUIPO -->
        <RelativeLayout
            android:id="@+id/btnDetallesEquipo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/iconDetallesEquipo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/usermenu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de Equipo"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="60dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="30sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>


        <!-- BOTÓN: CENTRO DE AYUDA -->
        <RelativeLayout
            android:id="@+id/btnCentroAyuda"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/iconCentroAyuda"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ayuda"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro de Ayuda"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="60dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="30sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
