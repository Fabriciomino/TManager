<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#1A0026">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- =========================
             CABECERA PARTIDO
        ========================== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ESCUDO IZQUIERDO -->
            <ImageView
                android:id="@+id/imgEscudoLeft"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask_purple"
                android:padding="4dp" />

            <!-- CENTRO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Equipo vs Rival"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtMarcador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 - 1"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- ESCUDO DERECHO -->
            <ImageView
                android:id="@+id/imgEscudoRight"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask_purple"
                android:padding="4dp" />
        </LinearLayout>

        <!-- FECHA -->
        <TextView
            android:id="@+id/txtFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="12/05/2025 Â· 18:30"
            android:textColor="#DDDDDD"
            android:textSize="14sp" />

        <!-- =========================
             DETALLE EXPANDIBLE
        ========================== -->

        <LinearLayout
            android:id="@+id/layoutDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">



            <LinearLayout
                android:id="@+id/containerGoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp" />


            <LinearLayout
                android:id="@+id/containerTarjetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
