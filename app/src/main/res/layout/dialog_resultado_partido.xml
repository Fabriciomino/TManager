<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#1A0026">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO -->
        <TextView
            android:text="Resultado del Partido"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- GOLES -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtGolesLocal"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textColor="#FFFFFF"
                android:textColorHint="#55FFFFFF"
                android:inputType="number"
                android:gravity="center" />

            <TextView
                android:text=" - "
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtGolesRival"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textColor="#FFFFFF"
                android:textColorHint="#55FFFFFF"
                android:gravity="center"
                android:inputType="number" />
        </LinearLayout>

        <!-- BOTÓN AÑADIR GOL -->
        <Button
            android:id="@+id/btnAddGol"
            android:text="Añadir Gol"
            android:background="#6200EA"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- CONTENEDOR DE GOLES -->
        <LinearLayout
            android:id="@+id/golesContainer"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- BOTÓN AÑADIR TARJETA -->
        <Button
            android:id="@+id/btnAddTarjeta"
            android:text="Añadir Tarjeta"
            android:background="#D50000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- CONTENEDOR DE TARJETAS -->
        <LinearLayout
            android:id="@+id/tarjetasContainer"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnGuardarResultado"
            android:text="Guardar Resultado"
            android:layout_marginTop="25dp"
            android:background="#00E676"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </LinearLayout>

</ScrollView>
