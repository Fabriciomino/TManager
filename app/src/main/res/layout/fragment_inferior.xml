<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center">

    <!-- EVENTOS -->
    <LinearLayout
        android:id="@+id/btnEventos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconEventos"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eventos"
            android:alpha="1"/>

        <TextView
            android:id="@+id/txtEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eventos"
            android:textColor="#0D0D0D"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- EQUIPO -->
    <LinearLayout
        android:id="@+id/btnEquipo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconEquipo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eventos"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/txtEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textColor="#0D0D0D"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- MI PERFIL -->
    <LinearLayout
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconPerfil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/usermenu"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/txtPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textColor="#0D0D0D"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
